---
import Layout from "../layouts/Layout.astro";
import Badge from "@/components/Badge.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hola, soy Gabri
        <a
          href="https://www.linkedin.com/in/gabriel-%C3%A1lvarez-segura-735445187"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span>+4 años de experiencia.</span>
        <span class="text-yellow-200/90">Desarrollador y Programador Web.</span>
        <span class="text-red-200/90"> De Barcelona, España.</span><span
          class="opacity-75"
        >
          Me especializo en plasmar en código todo lo que te puedas imaginar.</span
        >
      </h2>
    </section>
  </main>
</Layout>

